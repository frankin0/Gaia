<IfModule mod_rewrite.c>
	<IfModule mod_negotiation.c>
		Options -MultiViews
	</IfModule>

	RewriteEngine On
	
	# no one gets in here!
	RedirectMatch 301 /core(.*) http://www.promo-to.it/v2/$1
	RedirectMatch 301 /libraries(.*) http://www.promo-to.it/v2/$1
	
	RewriteBase /

	# Handle Front Controller...
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{REQUEST_FILENAME} !-f

	RewriteCond %{REQUEST_SCHEME}://%{HTTP_HOST}%{REQUEST_URI}#$0 ^:?(.*)/(.*)#(\2)$

	RewriteCond %{REQUEST_URI} !.*\.(ico|gif|jpg|jpeg|png|js|css)

	#RewriteRule ^(.*)$ v2/index.php?route=$0&base_url=%1 [L,QSA]
    RewriteRule ^(.*)$ v2/index.php?/$1 [L] 
	
	
	
</IfModule> 